@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using eStore_WebMVC.Models
@model Member

<h1>Update Member</h1>
<form asp-action="UpdateMember" asp-controller="Member" method="post">
    <div class="form-group row mt-3">
        <label for="memberId" class="col-sm-2 col-form-label">MemberID</label>
        <div class="col-sm-5">
            <input type="email" class="form-control" asp-for="MemberId" id="memberId" placeholder="MemberId" readonly value="@Model.MemberId" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-5">
            <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Email" value="@Model.Email" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-5">
            <input type="password" class="form-control" asp-for="Password" id="password" placeholder="Password" value="@Model.Password" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="companyName" class="col-sm-2 col-form-label">ConpanyName</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" asp-for="CompanyName" id="companyName" placeholder="CompanyName" value="@Model.CompanyName" required>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label for="city" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" asp-for="City" id="city" placeholder="City" value="@Model.City" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label for="country" class="col-sm-2 col-form-label">Country</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" asp-for="Country" id="country" placeholder="Country" value="@Model.Country" required>
        </div>
    </div>
    <div class="form-group row mt-3">
        <div class="col-sm-5 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
