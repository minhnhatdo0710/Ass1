@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using eStore_WebMVC.Models
@model List<Member>
<h1>Member Management</h1>

<a class="add" asp-action="Add" asp-controller="Member">Create</a>
<table border="1">
    <tr>
        <th>
            MemberID
        </th>
        <th>
            Email
        </th>
        <th>
            Password
        </th>
        <th>CompanyName</th>
        <th>
            City
            
        </th>
        <th>
            Country
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (Member member in Model)
    {
        <tr>

            <td>@member.MemberId</td>
            <td>@member.Email</td>
            <td>@member.Password</td>
            <td>@member.CompanyName</td>
            <td>@member.City</td>
            <td>@member.Country</td>
            <td>
                <a asp-action="Update" asp-controller="Member" asp-route-id="@member.MemberId">Edit</a>
                <a asp-action="DeleteAsyn" asp-controller="Member" asp-route-id="@member.MemberId">Delete</a>
            </td>
        </tr>
    }



</table>
<style>
    table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #04AA6D;
        color: black;
    }

    .add {
        margin-top: 10px;
        padding: 10px;
        background-color: blue;
        color: white;
        text-decoration: none;
        margin-bottom: 10px;
        border-radius: 10px;
    }

    .search {
        padding: 5px;
        border-radius: 5px;
    }
</style>